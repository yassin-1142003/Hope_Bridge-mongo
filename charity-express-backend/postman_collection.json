  },
  "item": [
    {
      "name": "Subscribe",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:4000/api/subscribers/notify/subscribe",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "subscribers", "notify", "subscribe"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\"\n}"
        }
      }
    },
    {
      "name": "Create Project (Public/Admin)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "http://localhost:4000/api/projects",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "projects"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Example Project\",\n  \"description\": \"Demo project\",\n  \"link\": \"https://example.com\",\n  \"image\": \"/mnt/data/9d6267be-4dc7-400a-8ee3-c952a7db1931.png\"\n}"
        }
