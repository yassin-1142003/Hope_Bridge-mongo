# Copy to `.env.local` when developing locally. These values back the Next.js
# app at `hope-bridge-main/`.

# ── Base URLs ────────────────────────────────────────────────────────────────
NEXT_PUBLIC_BASE_URL=http://localhost:3000
APP_BASE_URL=http://localhost:3000
BASE_URL=http://localhost:3000
NEXT_PUBLIC_DEFAULT_LOCALE=en
DEFAULT_PROJECT_LOCALE=en

# ── Databases ───────────────────────────────────────────────────────────────
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/charity
PGDATABASE_URL=postgres://user:password@db-host/db-name
DATABASE_URL=${PGDATABASE_URL}

# ── Security / Integrations ─────────────────────────────────────────────────
LOGIN_SECRET=replace-with-long-random-string
NOTIFICATION_API_URL=
IFTTT_WEBHOOK_URL=
TURNSTILE_SECRET_KEY=
NEXT_PUBLIC_TURNSTILE_SITE_KEY=

# ── Email / SMTP ────────────────────────────────────────────────────────────
EMAIL_USER=hopebridgemails@gmail.com
EMAIL_PASS=google-app-password
EMAIL_FROM="HopeBridge Updates" <hopebridgemails@gmail.com>
EMAIL_BATCH_SIZE=50
EMAIL_TO_FALLBACK=hopebridgemails@gmail.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true

